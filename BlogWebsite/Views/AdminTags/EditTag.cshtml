@{
}


<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit Tag - Admin Functionality</h1>
    </div>
</div>
@if (Model != null)
{
    <div class="container py-5">
        <form method="post">
            <div class="mb-3">
                <label class="form-label" name="label">Id</label>
                <input type="text" class="form-control " id="Name" asp-for="Id" readonly />
            </div>
            <div class="mb-3">
                <label class="form-label" name="label">Name</label>
                <input type="text" class="form-control" id="Name" asp-for="Name" />
            </div>
            <div class="mb-3">
                <label class="form-label" name="label">Display Name</label>
                <input type="text" class="form-control" id="DisplayName" asp-for="DisplayName" />
            </div>
            <div class="mb-3">

                <div class="d-flex">

                    <button class="btn btn-dark me-2" asp-area="" >
                        Update
                    </button>
                    <button asp-area="" class="btn btn-danger me-2" asp-controller="AdminTags"
                    asp-action="DeleteTag">
                        Delete
                    </button>

                </div>

            </div>
        </form>


    </div>

}
else
{
    <p>Tag not found!</p>
}