@model List<BlogWebsite.Models.Domain.BlogPost>
@{

}
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1> Blog Posts - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5" >

    <table  class="table">
        <thead>
            <tr>
            <th>ID</th>
            <th>Heading</th>
           <th>Tags</th>
           <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var blogPost in Model )
            {
                <tr><td>
                        @blogPost.Id
                </td>
                    <td>@blogPost.Heading</td>
                    <td>
                        <div class="d-flex" >
                        @foreach ( var item in blogPost.tags )
                        {
                            <span class="badge bg-secondary me-2">@item.Name</span>
                        }
                        </div>
                        <td>
                            <a asp-area=""
                           asp-action="EditBlog"
                           asp-controller="AdminBlogPost"
                           asp-route-id="@blogPost.Id" >Edit</a>

                        </td>
                  
                    
            </tr>
            }
        </tbody>
    </table>
</div>
